prototype(Sitegeist.Bitzer:Application.Index) {
    @context.approvalWidget = ${Approval.Widget.forApprovalAssignments(this)}
    widgets {
        approvalAssignments {
            icon = ${approvalWidget.icon}
            uri = ${approvalWidget.uri}
            title = ${approvalWidget.title}
            description = ${approvalWidget.description}
        }
    }
}
